{
  "name": "koa-starter",
  "version": "1.0.4",
  "description": "Starter project for Koa application",
  "scripts": {
    "start": "NODE_ENV=development PORT=3001 nodemon ./src/index.js",
    "test:unit": "jest",
    "test:unit:watch": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "test:integration": "jest -c jest.config.integration.js",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "update-dependencies": "npx npm-check-updates -u && npm install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/krsgrnt/koa-starter.git"
  },
  "author": "Kris Grint",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/krsgrnt/koa-starter/issues"
  },
  "homepage": "https://github.com/krsgrnt/koa-starter#readme",
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@koa/router": "^10.0.0",
    "chalk": "^4.1.0",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "koa-compose": "^4.1.0",
    "koa-helmet": "^6.0.0"
  },
  "devDependencies": {
    "@shopify/jest-koa-mocks": "^2.2.4",
    "@tsconfig/node14": "^1.0.0",
    "@types/jest": "^26.0.19",
    "@types/koa": "^2.11.6",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-helmet": "^6.0.1",
    "@types/koa__cors": "^3.0.2",
    "@types/koa__router": "^8.0.3",
    "@types/node": "^14.14.12",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.2.0",
    "husky": "^4.3.5",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --cache --fix",
      "jest --bail --findRelatedTests"
    ]
  }
}
