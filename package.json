{
  "name": "koa-starter",
  "version": "1.0.1",
  "description": "Starter project for Koa application",
  "scripts": {
    "start": "NODE_ENV=development PORT=3001 nodemon ./src/index.js",
    "test:unit": "jest",
    "test:unit:watch": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "test:integration": "jest -c jest.config.integration.js",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "update-dependencies": "npx npm-check-updates -u && npm install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/krsgrnt/koa-starter.git"
  },
  "author": "Kris Grint",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/krsgrnt/koa-starter/issues"
  },
  "homepage": "https://github.com/krsgrnt/koa-starter#readme",
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@koa/router": "^10.0.0",
    "chalk": "^4.1.0",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "koa-compose": "^4.1.0",
    "koa-helmet": "^6.0.0"
  },
  "devDependencies": {
    "eslint": "^7.14.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.2.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "supertest": "^6.0.1"
  }
}
